
.controls {
  padding: 4px 12px 0 12px;
  margin: 0;
}
.controls button {
  margin-top: 8px;
  font-size: 16px;
}
.body {
  font-family: Helvetica, arial, sans-serif;
  font-size: 14px;
  line-height: 1.6;
  background-color: #fff;
  padding: 30px;
  margin: 0;
}
.body image {
  max-width: 100%;
}
.body view {
  margin: 15px 0;
}
.body .first-child {
  margin-top: 0 !important;
}
.body .last-child {
  margin-bottom: 0 !important;
}
.body .h1,
.body .h2,
.body .h3 {
  margin: 20px 0 10px;
  padding: 0;
  font-weight: bold;
  position: relative;
}
.body .h1 {
  font-size: 28px;
}
.body .h2 {
  font-size: 24px;
  border-bottom: 1px solid #ccc;
}
.body .h3 {
  font-size: 18px;
}
.body .em {
  font-style: italic;
}
.body .pre {
  background-color: #f8f8f8;
  border: 1px solid #ccc;
  font-size: 13px;
  line-height: 19px;
  padding: 6px 10px;
  border-radius: 3px;
  display: block;
  font-family: monospace;
  box-sizing: border-box;
}
.body .pre .code {
  margin: 0;
  padding: 0;
  border: none;
  background: transparent;
}
.body .code {
  display: inline;
  margin: 0 2px;
  padding: 0 5px;
  white-space: nowrap;
  border: 1px solid #eaeaea;
  background-color: #f8f8f8;
  border-radius: 3px;
}
.body .blockquote {
  border-left: 4px solid #ddd;
  padding: 0 15px;
  color: #777;
}
